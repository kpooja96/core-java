package com.capgemini.bankapp.test;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import com.capgemini.bankapp.model.BankAccount;
import com.capgemini.bankapp.model.SavingBankAccount;

public class SavingBankTest {

	private SavingBankAccount account;
	
	@Test(expected=LowBalanceException.class)  
	public void testSavingBankAccountobjectWithSufficientbalance() throws LowBalanceException, DebitLimitExceeded {
		
		 account=new SavingBankAccount(101,"John Don",35000,true);
		account.withdraw(50000);
	}


	
	@Test(expected=LowBalanceException.class)
	public void testSavingBankAccountobjectWithNotSufficientbalance() throws LowBalanceException, DebitLimitExceeded {
		
		 account=new SavingBankAccount(101,"John Don",55000,false);
		account.withdraw(50000);
	}
}
